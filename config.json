{
    "prod": false,
    "path": {
        "dist": {
            "root": "dist",
            "lib": "dist/lib",
            "js": "dist/js",
            "css": "dist/css",
            "img": "dist/img",
            "i18n": "dist/i18n"
        },
        "src": {
            "scss": "./src/app/app.component.scss"
        },
        "bundle": {
            "js": "bundle.js",
            "css": "main.css"
        },
        "track": {
            "ts": [
                "./src/**/*.ts"
            ],
            "template": [
                "src/**/*.html"
            ],
            "img": [
                "src/**/*.ico",
                "src/**/*.png"
            ],
            "scss": [
                "./src/**/*.scss"
            ],
            "node": "node_modules/**",
            "lib": [
                "core-js/client/shim.js",
                "core-js/client/shim.min.js",
                "core-js/client/shim.min.js.map",
                "reflect-metadata/Reflect.js",
                "reflect-metadata/Reflect.js.map",
                "zone.js/dist/zone.js",
                "zone.js/dist/zone.min.js",
                "bootstrap/dist/css/**",
                "bootstrap/dist/fonts/**",
                "dragula/dist/dragula.css",
                "dragula/dist/dragula.min.css"
            ]
        }
    },
    "browserify": {
        "basedir": ".",
        "debug": true,
        "entries": [
            "src/main.ts"
        ],
        "cache": {},
        "packageCache": {}
    },
    
    "babelify": {
        "extensions": [
            ".tsx",
            ".ts",
            ".js"
        ]
    }
}